{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "customManagers": [
        {
            "customType": "regex",
            "description": "Process Talos Linux version",
            "fileMatch": [
                "^vmconfig\\.secret\\.sops\\.yaml$"
            ],
            "matchStrings": [
                "os_version:\\s*(?<currentValue>v[\\d\\.]+)"
            ],
            "datasource": "github-releases",
            "depNameTemplate": "talos",
            "lookupName": "talos-systems/talos",
            "versioning": "semver"
        },
        {
            "customType": "regex",
            "description": "Process Talos Kubernetes version",
            "fileMatch": [
                "^vmconfig\\.secret\\.sops\\.yaml$"
            ],
            "matchStrings": [
                "k8s_version:\\s*(?<currentValue>v[\\d\\.]+)"
            ],
            "datasource": "github-releases",
            "depNameTemplate": "kubernetes",
            "lookupName": "kubernetes/kubernetes",
            "versioning": "semver"
        }
    ]
}