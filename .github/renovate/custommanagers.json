{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "customManagers": [
        {
            "customType": "regex",
            "description": "Process Talos Linux version",
            "fileMatch": [
                "^vmconfig\\.secret\\.sops\\.yaml$"
            ],
            "matchStrings": [
                "os_version:\\s*(?<currentValue>v[\\d\\.]+)"
            ],
            "datasource": "github-releases",
            "depNameTemplate": "talos",
            "lookupName": "talos-systems/talos",
            "versioning": "semver"
        },
        {
            "customType": "regex",
            "description": "Process Talos Kubernetes version",
            "fileMatch": [
                "^vmconfig\\.secret\\.sops\\.yaml$"
            ],
            "matchStrings": [
                "k8s_version:\\s*(?<currentValue>v[\\d\\.]+)"
            ],
            "datasource": "github-releases",
            "depNameTemplate": "kubernetes",
            "lookupName": "kubernetes/kubernetes",
            "versioning": "semver"
        },
        {
            "customType": "regex",
            "description": "Process custom dependencies",
            "fileMatch": [
              "(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$",
              "(^|/)clusters/.+\\.ya?ml(\\.j2)?$"
            ],
            "matchStrings": [
              "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\n.*?\"(?<currentValue>.*)\"\n",
              "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\n.*?-\\s(.*?)/(?<currentValue>(v|\\d)[^/]+)/\\S+\n"
            ],
            "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
            "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
          }
    ]
}